{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@packages/anchor-client": ["./packages/anchor-client/src"],
      "@packages/shared-types": ["./packages/shared-types/src"],
      "@packages/constants": ["./packages/constants/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", "target"]
}
